<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="150dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="150dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/black_translucence">

        <ScrollView
            android:id="@+id/sv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="50dp"
            android:paddingBottom="50dp"
            android:paddingLeft="30dp"
            android:paddingRight="20dp"
            android:layout_weight="2.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_content"
                android:textSize="35dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingTop="50dp"
            android:paddingBottom="50dp"
            android:paddingRight="20dp"
            >

            <com.youth.banner.Banner
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:title_height="50dp"
                app:title_textsize="30dp"
                app:indicator_width="15dp"
                app:indicator_height="15dp"
                app:title_background="@color/gray_translucence"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginLeft="13dp"
            android:layout_weight="3"
            >
            <ImageView
                android:id="@+id/mute"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:src="@mipmap/icon_03" />
            <ImageView
                android:id="@+id/restart"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="50dp"
                android:src="@mipmap/icon_06" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>