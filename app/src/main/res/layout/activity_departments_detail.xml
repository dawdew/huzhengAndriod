<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout style="@style/advisory_search_ll"
        android:layout_marginTop="70dp"
        >

        <TextView
            style="@style/advisory_search_tv"
            android:text="搜索" />

        <RelativeLayout
            android:id="@+id/rlSearch"
            style="@style/advisory_search_rl">

            <ImageView
                android:id="@+id/imgSearch"
                style="@style/advisory_search_img" />

            <EditText
                android:id="@+id/edtSearch"
                style="@style/advisory_search_edt"
                android:layout_toLeftOf="@+id/imgSearch"
                android:hint="请输入您想要搜索的部门" />
        </RelativeLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_marginLeft="160dp"
        android:layout_marginRight="160dp"
        android:layout_marginBottom="160dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_translucence"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_address"
                style="@style/activity_departments_tv"
                android:text="地址：" />
            <TextView
                android:id="@+id/tv_phone"
                style="@style/activity_departments_tv"
                android:text="联系电话：" />
            <TextView
                android:id="@+id/tv_transportation"
                style="@style/activity_departments_tv"
                android:text="交通出行：" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="30dp">
            <com.amap.api.maps.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </com.amap.api.maps.MapView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
